<%= render 'books/list', books: @books %>


<div>

<h1>Books</h1>

<% @books.each do |book| %>

<div>
  <%#= link_to user_path(user.id) do %>
  <%#= image_tag book.get_image %>
  <p><%#= image_tag 'no_image.jpg' %></p>
  <%# end %>
  <p>Title</p>
  <%= link_to book_path(book.id) do %>
  <%= book.title %>
  <% end %>


  <p>Opinion : <%= book.opinion %></p>
</div>

  <% end %>

</div>