<div class="col-md-3">

<%= render "list", user: current_user %>
<%= render "books/list", book: @book %>

</div>


<div class="col-md-8 offset-md-1">
  <h2>Users</h2>

  <table class="table table-hover table-inverse">

    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image("100x100") %></td>
        <td><%= user.name %></td>
        <td><%= link_to user_path(user.id) do %>
            show
            <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>



