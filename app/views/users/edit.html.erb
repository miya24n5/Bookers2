<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  <h2>User info</h2>
  <% if @user.errors.any? %>
  <h3><%= @user.errors.count %> error prohibited this obj from being saved:</h3>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
    <li>
      <%= message %>
    </li>
    <% end %>
  </ul>
  <% end %>

  <%= form_with model: @user, local:true do |f| %>

  <div class="form-group">
    Name<br>
    <%= f.text_field :name, autofocus: true, id: "inputName", placeholder: @user.name, class: 'form-control mt-2' %>
  </div>

  <div class="form-group">
    image<br>
    <%= f.file_field :profile_image, accept: "image/*", class: 'mt-2' %>
  </div>


  <div class="form-group">
    introduction<br>
    <%= f.text_area :introduction, placeholder: @user.introduction, class: 'form-control mt-2' %>
  </div>

  <button type="submit" class="btn btn-secondary">Update User</button>

  <% end %>
</div>


